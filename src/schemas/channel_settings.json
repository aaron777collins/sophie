{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "slowmode": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": false
        },
        "duration": {
          "type": "number",
          "minimum": 0,
          "maximum": 300,
          "description": "Slowmode duration in seconds (0-300)"
        }
      },
      "required": ["enabled"]
    }
  }
}