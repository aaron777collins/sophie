{
  "name": "haos-v2",
  "version": "1.0.0",
  "description": "HAOS v2 - Matrix-powered chat application with comprehensive error reporting",
  "main": "index.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "cypress:run:headless": "cypress run --headless",
    "cypress:run:mobile": "cypress run --config viewportWidth=375,viewportHeight=667",
    "cypress:run:tablet": "cypress run --config viewportWidth=768,viewportHeight=1024",
    "cypress:run:ci": "cypress run --headless --reporter json --reporter-options output=test-results.json",
    "test:smoke": "cypress run --spec cypress/e2e/critical/**/*",
    "test:full": "npm run cypress:run",
    "test:mobile": "npm run cypress:run:mobile",
    "test:performance": "cypress run --spec cypress/e2e/performance/**/*",
    "migrate": "ts-node scripts/migrate.ts",
    "migrate:up": "npm run migrate up",
    "migrate:down": "npm run migrate down",
    "migrate:status": "npm run migrate status",
    "migrate:current": "npm run migrate current"
  },
  "keywords": [
    "e2e",
    "cypress",
    "testing",
    "haos",
    "chat",
    "matrix"
  ],
  "author": "HAOS Development Team",
  "license": "MIT",
  "devDependencies": {
    "@testing-library/cypress": "^10.0.1",
    "@types/node": "^20.11.0",
    "@types/pg": "^8.10.9",
    "autoprefixer": "^10.4.24",
    "cypress": "^13.7.0",
    "cypress-axe": "^1.5.0",
    "cypress-file-upload": "^5.0.8",
    "cypress-mochawesome-reporter": "^3.8.2",
    "cypress-multi-reporters": "^1.6.4",
    "cypress-real-events": "^1.12.0",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^4.3.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.19",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@sentry/nextjs": "^10.39.0",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "cypress-cucumber-preprocessor": "^4.3.1",
    "lucide-react": "^0.564.0",
    "next": "^16.1.6",
    "pg": "^8.11.3",
    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  }
}
